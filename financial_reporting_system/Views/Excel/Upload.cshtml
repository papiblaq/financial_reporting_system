@{
    Layout = null;
    ViewData["Title"] = "Upload Excel Workbook";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            margin-top: 50px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
        }

        .btn {
            width: 48%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <h2 class="text-center">@ViewData["Title"]</h2>

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="file">Upload Excel Workbook:</label>
                            <input type="file" name="file" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="filePath">Excel File Path:</label>
                            <input type="text" name="filePath" class="form-control" required />
                        </div>
                        <div class="btn-container">
                            <button type="submit" class="btn btn-primary">Upload</button>
                            <a href="@Url.Action("ViewSheets", "Excel")" class="btn btn-success">View Sheets</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
