@{
    Layout = null;
    ViewData["Title"] = "Upload Excel Workbook";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            margin-top: 50px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
        }

        .btn {
            width: 48%;
        }


    </style>
</head>
<body>
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <!-- Back Buttons Container -->
                    <div class="d-flex gap-2">
                        <!-- Home Button -->
                        <a href="@Url.Action("ExcelWorkbookUpload", "ExcelMapping_Documentation")" class="back-button btn btn-outline-secondary">
                            <i class="fa-solid fa-house"></i>
                        </a>
             
                       
                    </div>
                    <h2 class="text-center">@ViewData["Title"]</h2>

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="file">Upload Excel Workbook:</label>
                            <input type="file" name="file" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="filePath">Excel File Path:</label>
                            <input type="text" name="filePath" class="form-control" required />
                        </div>
                        <div class="btn-container">
                            <button type="submit" class="btn btn-primary">Upload</button>
                            <a href="@Url.Action("ViewSheets", "Excel")" class="btn btn-success">View Sheets</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
