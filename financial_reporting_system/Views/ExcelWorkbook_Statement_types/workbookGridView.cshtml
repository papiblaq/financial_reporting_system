@model List<ExcelWorkbook_Statement_typesController.StatementType>

@{
    Layout = null;
    ViewData["Title"] = "Workbook Grid View";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/20.4.38/material.css" />
    <link href="https://cdn.syncfusion.com/ej2/26.1.35/bootstrap5-dark.css" rel="stylesheet" />
    <script src="https://cdn.syncfusion.com/ej2/26.1.35/dist/ej2.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Custom CSS for the grid */
        .container {
            margin-top: 50px;
        }

        .grid-title {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            color: #343a40;
        }

        .white-grid {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .e-grid .e-rowcell {
            padding: 10px;
        }

        .e-grid .e-headercell {
            background-color: #f8f9fa;
            font-weight: bold;
            color: #495057;
        }

        .e-grid .e-pager {
            border-top: 1px solid #dee2e6;
            padding: 10px;
        }

        .no-a-decoration {
            text-decoration: none;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .fa-lg {
            font-size: 1.25rem;
        }

        .text-danger {
            color: #dc3545;
        }

        .text-success {
            color: #28a745;
        }

        .d-flex {
            display: flex;
        }

        .flex-row {
            flex-direction: row;
        }

        .justify-content-start {
            justify-content: flex-start;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Back Button and Grid Title Container -->
        <div class="d-flex align-items-center mb-3">
            <!-- Back Button -->
            <a href="/ExcelWorkbook_Statement_types/Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
            <!-- Grid Title (Centered) -->
            <h1 class="grid-title mb-0 mx-auto">Excel Workbook Statement Sheets</h1>
        </div>

        <!-- Syncfusion Grid -->
        <ejs-grid id="grid" dataSource="@Model" allowPaging="true" allowSorting="true" allowFiltering="true" allowGrouping="false" cssClass="white-grid">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-selectionsettings type="Multiple"></e-grid-selectionsettings>
            <e-grid-columns>
                <!--<e-grid-column field="STMNT_ID" headerText="Statement ID" textAlign="Right" width="120"></e-grid-column>-->
                <!--<e-grid-column field="REF_CD" headerText="Reference Code" textAlign="Right" width="150"></e-grid-column>-->
                <e-grid-column field="DESCRIPTION" headerText="Description" textAlign="Right" width="500"></e-grid-column>
                <e-grid-column field="SYS_CREATE_TS" headerText="System Create Timestamp" textAlign="Right" width="150" format="yMd"></e-grid-column>
                <e-grid-column field="CREATED_BY" headerText="Created By" textAlign="Right" width="150"></e-grid-column>
                <e-grid-column field="EXCEL_SHEET" headerText="Excel Sheet" textAlign="Right" width="150"></e-grid-column>
                <e-grid-column field="EXCEL_WORKBOOK" headerText="Excel Workbook" textAlign="Right" width="150"></e-grid-column>
                <e-grid-column field="FILEPATH" headerText="File Path" textAlign="Right" width="200"></e-grid-column>
                <e-grid-column headerText="Actions" template="#ActionColumnTemplate" width="100"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>

    <!-- Action Column Template -->
    <script id="ActionColumnTemplate" type="text/x-template">
        <div class="d-flex flex-row justify-content-start">
            <a class="btn no-a-decoration btn-sm" href="/ExcelWorkbook_Statement_types/Edit/${STMNT_ID}">
                <i class="fa-solid fa-pen fa-lg"></i>
            </a>
            <form action="/ExcelWorkbook_Statement_types/Delete/${STMNT_ID}" method="post" onsubmit="return confirmDelete(event)">
        @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-link no-a-decoration">
                    <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
                </button>
            </form>
        </div>
    </script>

    <!-- Syncfusion Scripts -->
    <script src="https://cdn.syncfusion.com/ej2/20.4.38/dist/ej2.min.js"></script>
    <script>
        // Confirm delete function
        function confirmDelete(event) {
            if (!confirm("Are you sure you want to delete this record?")) {
                event.preventDefault();
            }
        }

        // Initialize Syncfusion Grid
        document.addEventListener('DOMContentLoaded', function () {
            const grid = document.getElementById('grid').ej2_instances[0];
            grid.refresh();
        });
    </script>

    <!-- Syncfusion ASP.NET Core Script Manager -->
    <ejs-scripts></ejs-scripts>
</body>
</html>